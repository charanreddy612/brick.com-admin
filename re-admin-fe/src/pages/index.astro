---
// src/pages/index.astro

type Project = {
  id: string;
  slug: string;
  title: string;
  location: string;
  priceFrom: number | null;
  priceTo: number | null;
  hero_image: string | null;
  status: boolean | null;
};

type HeroStats = {
  totalProjects: number;
  totalDevelopers: number;
  totalActiveProjects: number;
};

type SeoMeta = {
  title: string;
  description: string;
  canonical: string;
  jsonLd: any;
};

const API_BASE = "https://brick-com-admin.onrender.com";

const response = await fetch(`${API_BASE}/api/public/projects/home`);
if (!response.ok) {
  throw new Error(`Failed to fetch home data. Status: ${response.status}`);
}
const json = await response.json();

const { heroStats, featuredProjects, seoMeta }: { heroStats: HeroStats; featuredProjects: Project[]; seoMeta: SeoMeta } = json.data;
---

<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <title>{seoMeta.title}</title>
    <meta name="description" content={seoMeta.description} />
    <link rel="canonical" href={seoMeta.canonical} />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="/global.css" rel="stylesheet" />
    <script type="application/ld+json" is:inline>
      {JSON.stringify(seoMeta.jsonLd)}
    </script>
  </head>

  <body class="bg-white text-gray-900 font-sans leading-relaxed">
    <nav class="max-w-7xl mx-auto px-6 sm:px-10 py-4 flex justify-end">
      <a href="/admin/login" class="text-sm font-semibold text-emerald-600 hover:text-emerald-800 transition">
        Admin Login
      </a>
    </nav>

    <main class="max-w-7xl mx-auto px-6 sm:px-10 py-12">
      <!-- Hero Section -->
      <section class="text-center pb-16">
        <h1 class="text-4xl sm:text-5xl font-extrabold mb-4">
          Discover Your Next Home with Brick.com
        </h1>
        <p class="text-lg max-w-3xl mx-auto text-gray-600 mb-8">
          Explore {heroStats.totalProjects} premium real estate projects, trusted by over {heroStats.totalDevelopers} developers across multiple cities.
        </p>
        <div class="flex justify-center space-x-6">
          <a href="#featured-projects" class="bg-emerald-600 hover:bg-emerald-700 text-white px-6 py-3 rounded-md text-lg font-semibold transition">
            View Featured Projects
          </a>
          <a href="/projects" class="border border-emerald-600 text-emerald-600 hover:bg-emerald-100 px-6 py-3 rounded-md text-lg font-semibold transition">
            Browse All Projects
          </a>
        </div>
        <div class="flex justify-center mt-12 space-x-16">
          <div>
            <span class="block text-3xl font-extrabold">{heroStats.totalProjects}</span>
            <span class="block text-gray-600">Total Projects</span>
          </div>
          <div>
            <span class="block text-3xl font-extrabold">{heroStats.totalDevelopers}</span>
            <span class="block text-gray-600">Developers</span>
          </div>
          <div>
            <span class="block text-3xl font-extrabold">{heroStats.totalActiveProjects}</span>
            <span class="block text-gray-600">Active Listings</span>
          </div>
        </div>
      </section>

      <!-- Featured Projects Grid -->
      <section id="featured-projects">
        <h2 class="text-2xl font-bold mb-8 border-b border-gray-200 pb-2">
          Featured Projects
        </h2>
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
          {featuredProjects.map((project: Project) => (
            <a href={`/projects/${project.slug}`} class="group block rounded-lg overflow-hidden shadow-lg border border-gray-200 hover:shadow-2xl transition" >
              <div class="relative aspect-w-16 aspect-h-9 overflow-hidden">
                {project.hero_image
                  ? <img src={project.hero_image} alt={`Hero image of ${project.title}`} loading="lazy" class="object-cover object-center w-full h-full group-hover:scale-105 transition-transform duration-300" />
                  : <div class="bg-gray-200 w-full h-full flex items-center justify-center text-gray-400">
                      No image available
                    </div>
                }
              </div>
              <div class="p-4 bg-white">
                <h3 class="text-lg font-semibold mb-1 text-gray-900">{project.title}</h3>
                <p class="text-sm text-gray-600 mb-2">{project.location}</p>
                <p class="text-sm font-medium text-emerald-700">
                  {project.priceFrom && project.priceTo
                    ? `₹${project.priceFrom.toLocaleString()} - ₹${project.priceTo.toLocaleString()}`
                    : "Price on request"}
                </p>
                <p class={`inline-block mt-3 px-3 py-1 text-xs font-semibold rounded-full ${project.status ? "bg-emerald-100 text-emerald-800" : "bg-gray-100 text-gray-500"}`}>
                  {project.status ? "Active" : "Inactive"}
                </p>
              </div>
            </a>
          ))}
        </div>
      </section>
    </main>
  </body>
</html>
