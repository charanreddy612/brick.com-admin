---
const API_BASE = "https://brick-com-admin.onrender.com";

export async function getStaticPaths() {
  0;
  try {
    console.log("Fetching developer slugs for static paths...");
    const res = await fetch(`${API_BASE}/api/public/developers?limit=1000`);
    if (!res.ok) throw new Error(`API response not OK: ${res.status}`);

    const json = await res.json();
    const developers = json.data?.rows || [];

    console.log(`Developers fetched: ${developers.length}`);

    const paths = developers
      .filter(
        (dev: { slug: string | any[] }) =>
          typeof dev.slug === "string" && dev.slug.length > 0
      )
      .map((dev: { slug: any }) => ({ params: { slug: dev.slug } }));

    console.log(`Paths to generate: ${paths.length}`);

    if (paths.length === 0) {
      console.warn("No valid developer slugs found. Using fallback slug.");
      return {
        paths: [{ params: { slug: "default-slug" } }],
        fallback: false,
      };
    }

    return { paths, fallback: false };
  } catch (error) {
    console.error("Error in getStaticPaths:", error);
    return {
      paths: [{ params: { slug: "default-slug" } }],
      fallback: false,
    };
  }
}

const { slug } = Astro.params;

let developer = null;
try {
  const res = await fetch(`${API_BASE}/api/public/developers/${slug}`);
  if (res.ok) {
    const json = await res.json();
    developer = json.data;
    if (!developer) {
      console.warn(`Developer data not found for slug: ${slug}`);
    }
  } else {
    console.warn(
      `Failed fetching developer for slug: ${slug}, status: ${res.status}`
    );
  }
} catch (e) {
  console.error("Failed to load developer data:", e);
}
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>
      {developer ? developer.name : "Developer Not Found"} | Brick.com
    </title>
    <meta name="description" content={developer?.bio || "Developer profile"} />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="/global.css" rel="stylesheet" />
  </head>
  <body
    class="bg-white text-gray-900 font-sans leading-relaxed max-w-4xl mx-auto p-6"
  >
    {
      developer ? (
        <article>
          <h1 class="text-3xl font-bold mb-4">{developer.name}</h1>
          <p class="mb-2">
            <strong>Company:</strong> {developer.company}
          </p>
          <p class="mb-2">
            <strong>Bio:</strong> {developer.bio}
          </p>
          {/* Add more developer details here */}
        </article>
      ) : (
        <section class="text-center py-20">
          <h2 class="text-2xl font-semibold mb-4">Developer not found</h2>
          <a
            href="/developers"
            class="inline-block px-4 py-2 bg-emerald-600 text-white rounded hover:bg-emerald-700 transition"
          >
            Back to Developers
          </a>
        </section>
      )
    }
  </body>
</html>
