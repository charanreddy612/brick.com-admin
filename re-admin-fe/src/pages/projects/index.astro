---
type Project = {
  slug: string;

  title?: string;

  location?: string;

  status?: boolean;

  // add other fields returned by the API as needed
};

const API_BASE = "https://brick-com-admin.onrender.com";

let projects = [];

try {
  const res = await fetch(
    `${API_BASE}/api/public/projects?status=true&limit=50`
  );
  if (res.ok) {
    const json = await res.json();
    projects = json.data?.rows || [];
  }
} catch (e) {
  console.error("Failed to fetch projects list:", e);
}
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>All Projects | Brick.com</title>
    <meta
      name="description"
      content="Browse all real estate projects listed on Brick.com."
    />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="/global.css" rel="stylesheet" />
  </head>
  <body class="bg-white text-gray-900 font-sans">
    <main class="max-w-7xl mx-auto px-6 sm:px-10 py-12">
      <h1 class="text-3xl font-bold mb-6">All Projects</h1>
      {
        projects.length === 0 ? (
          <p class="text-gray-600">No projects available right now.</p>
        ) : (
          <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
            {projects.map((p: { slug: string; title: string; location: string; status: any; }) => (
              <a
                href={`/projects/${p.slug}`}
                class="block rounded-lg border border-gray-200 p-4 hover:shadow-lg transition"
              >
                <h2 class="text-lg font-semibold mb-1">{p.title}</h2>
                <p class="text-sm text-gray-600 mb-2">{p.location}</p>
                <p class="text-xs text-gray-500">
                  Status: {p.status ? "Active" : "Inactive"}
                </p>
              </a>
            ))}
          </div>
        )
      }
    </main>
  </body>
</html>
